<?xml version="1.0" encoding="UTF-8" ?>

<persistence version="2.0"
             xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">

            <!-- Create Persistence-Unit -->
    <persistence-unit name="project" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>at.fhburgenland.Person</class>
        <class>at.fhburgenland.Rennstrecke</class>
        <class>at.fhburgenland.Rennen</class>
        <class>at.fhburgenland.Team</class>
        <class>at.fhburgenland.Status</class>
        <class>at.fhburgenland.Nationalitaet</class>
        <class>at.fhburgenland.Fahrer</class>
        <class>at.fhburgenland.Hauptsponsor</class>
        <class>at.fhburgenland.Fahrzeugtyp</class>
        <class>at.fhburgenland.Fahrzeug</class>
        <class>at.fhburgenland.Rennen_Fahrer</class>


        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://127.0.0.1:5432/Gruppe1"/>
            <property name="jakarta.persistence.jdbc.user" value="bswe"/>
            <property name="jakarta.persistence.jdbc.password" value="fogl"/>

            <!-- Weitere Einstellungen -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect" />
            <property name="hibernate.show_sql" value="true" />
            <property name="hibernate.format_sql" value="true" />
        </properties>
    </persistence-unit>
</persistence>